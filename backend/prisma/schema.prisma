generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  
}

model User {
  id            String          @id @default(uuid())
  name          String
  email         String          @unique
  password      String
  createdAt     DateTime        @default(now())
  burnoutScores BurnoutScore[]
}

model BurnoutScore {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workHours   Float
  breakCount  Int
  stressLevel Int
  score       Float
  status      String
  createdAt   DateTime @default(now())

  @@index([userId])
}